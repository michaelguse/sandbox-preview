<!DOCTYPE html>
<html lang="en">
<% include ../partials/head.ejs %>
<body>
  <div class="wrapper">
    <div class="body-wrapper">
      <% include ../partials/nav.ejs %>
        <% include ../partials/header.ejs %>
          <div class="content-wrapper">
            <div class="component">
              <div class="general-content">
                <h4>What is your Sandbox domain name?</h4>
                <form action="/domainlookup" type="GET" class="form-primary">
                  <% if (locals.errors) { %>
                    <input class="form-error-msg" name="org_id" id="org_id" placeholder="" type="text" autocomplete="off" autofocus required />
                    <input type="submit" class="button" value="submit" />
                    <% errors.forEach(function(r) { %>
                      <br/><br/><label for="org_id" style="color: red;"><%= r %></label>
                  <% }); %>
                  <% } else { %>
                    <input name="org_id" placeholder="Enter a domain name" type="text" autocomplete="off" autofocus required />
                    <input type="submit" class="button" value="submit" />
                  <% }; %>
                </form>
              </div>
              <div class="divider"></div>
              <% include ../partials/helpful-links.ejs %>
            </div>
          </div>
    </div>
    <% include ../partials/footer.ejs %>
    <% include ../partials/script_section.ejs %>
  </div>
</body>
</html>